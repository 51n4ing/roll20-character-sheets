{
  "name": "adnd_1e_revised",
  "version": "1.0.0",
  "description": "AD&D1e Revised Sheet for Roll20",
  "scripts": {
    "dev": "npm run dev:js && node dev-process.js && chokidar 'src/index.html' 'src/index.js' -c 'npm run dev'",
    "prod": "npm run prod:js && node prod-process.js",
    "dev:js": "copy-file src/index.js dev/index.js",
    "prod:js": "esbuild src/index.js --bundle --minify --outfile=prod/index.js"
  },
  "author": "463088",
  "dependencies": {
    "chokidar": "^4.0.3",
    "eslint": "^9.20.1",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-prettier": "^5.2.3"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.5",
    "copy-file-util": "^1.2.1",
    "esbuild": "^0.25.0",
    "html-minifier": "^4.0.0"
  }
}
