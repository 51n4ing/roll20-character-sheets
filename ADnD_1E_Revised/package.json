{
  "name": "adnd_1e_revised",
  "version": "1.0.0",
  "description": "AD&D1e Revised Sheet for Roll20",
  "scripts": {
    "dev": "npm run bundle:js:dev && node bundle-process.js --dev && chokidar 'src/index.html' 'src/index.js' -c 'npm run dev'",
    "prod": "npm run bundle:js:prod && node bundle-process.js --prod",
    "bundle:js:dev": "copy-file src/index.js dev/index.js",
    "bundle:js:prod": "esbuild src/index.js --bundle --minify --outfile=prod/index.js"
  },
  "author": "463088",
  "dependencies": {
    "chokidar": "^4.0.3",
    "eslint": "^9.20.1",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-prettier": "^5.2.3",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.5",
    "@types/minimist": "^1.2.5",
    "copy-file-util": "^1.2.1",
    "esbuild": "^0.25.0",
    "html-minifier": "^4.0.0"
  }
}
